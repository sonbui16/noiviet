<div class="container d-flex flex-wrap justify-content-evenly row-gap-4 mx-auto ">
<% users.forEach(user => { %>
    <div class="card " style="width: 25rem;">
        <img src="https://picsum.photos/200" class="card-img-top" alt="...">
        <div class =" p-2">
            <h5 class="card-title">Bàn học thông minh smart D(Màu xanh – dài 1m2 + ghế G20)</h5>
            <p class="card-text">13.300.000 ₫ – 17.100.000 ₫</p>
            <a href="" class="btn btn-primary" >Đặt hàng</a>
        </div>
        

    </div>
<% }) %>
</div>




<a href="/users/add" class="btn btn-primary mb-2">Thêm</a>
<form action="" class="mb-3">
  <div class="row">
    <div class="col-3">
      <select name="status" id="" class="form-select">
        <option value="all" class="">Tất cả</option>
        <option value="active" class="">Kích hoạt</option>
        <option value="inactive" class="">Chưa kích hoạt</option>
      </select>
    </div>
    <div class="col-7">
      <input
        type="search"
        class="form-control"
        name="keyword"
        placeholder="Từ khoá..."
      />
    </div>
    <div class="col-2 d-grid">
      <button class="btn btn-success">Tìm kiếm</button>
    </div>
  </div>
</form>
<table class="table table-bordered">
  <thead class="">
    <tr class="">
      <th width="5%" class="">STT</th>
      <th class="">Tên người dùng</th>
      <th class="">Email</th>
      <th class="">Trạng thái</th>
      <th class="">Sửa</th>
      <th width="5%" class="">Xoá</th>
    </tr>
  </thead>
  <tbody class="">
    <% users.forEach((user , index ) => { %>
    <tr class="">
      <td><%= index + 1 %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td width="5%">
        <%- user.status ? `<span class="badge bg-success">Kích hoạt</span>`:
        `<span class="badge bg-danger">Chưa kích hoạt</span>` %>
      </td>
      <td>
        <a href="/users/edit/<%= user.id %>" class="btn btn-warning">Sửa</a>
      </td>
      <td><a href="" class="btn btn-danger">Xoá</a></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<% if (totalPages > 1) { %>
<ul class="pagination">
    <% if (page > 1 ) { %>
  <li class="page-item"><a class="page-link" href="?page=<%= +page-1 %>">Trước</a></li>
     
    <% } %>
  <% for( let index = 1; index < totalPages; index++ ) { %>
  <li class="page-item <%= page == index ? "active" : ""%>">
    <a class="page-link" href="?page=<%= index  %>"><%= index %></a>
  </li>
  <% } %>
      <% if (page< totalPages ) { %>
  <li class="page-item"><a class="page-link" href="?page=<%= +page+1%>">Sau</a></li>

    <% } %>
</ul>
<% } %>
